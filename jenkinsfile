pipeline {
    agent any
    stages {
        stage('Checking Maven Version') {
            steps {
                script {
                    bat 'mvn -v'
                }
            }
        }
        stage('Repo Cloning') {
            steps {
                git branch: 'main', credentialsId: 'bejaoui13', url: 'https://github.com/bejaoui13/Cucumber-pipelineNinj.git'
            }
        }
        stage('Build') {
            steps {
                script {
                //    bat 'mvn clean test'
                    bat 'mvn clean test -Dwebdriver.chrome.driver=C:\\Users\\user\\eclipseworkspace\\ShopBDDweb\\driver\\chromedriver.exe'
                    
                }
            }
        }
        
        
         stage('Test') {
            steps {
                script {
                    bat 'mvn test'
                }
            }
        }
        
    }
}